# VBS Simple Server Environment Configuration
# Copy this file to .env and update the values

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
DB_NAME=vbs_db
COLLECTION=file_metadata

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Model Paths (relative to src directory)
MODEL_PATH=../models/beit3.spm
MODEL_WEIGHT_PATH=../models/beit3_large_patch16_384.pth
FAISS_INDEX_PATH=../models/batch1.bin
FRAME_IDS_PATH=../models/batch1.json
MAX_LEN=64

# Fix for OpenMP duplicate library issue (required for PyTorch + BEiT3)
KMP_DUPLICATE_LIB_OK=TRUE

# Example Production MongoDB (replace with your connection string)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/vbs_db

# Example with authentication
# MONGO_URI=mongodb://user:password@host:27017/vbs_db
